{
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/test.ts"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true
  }
}
